    <li>
      <p>
        <strong>Username: </strong>
        <%= critic.username %>
      </p>
      <p>
        <strong>Title: </strong>
        <%= critic.title %>
      </p>
      <p>
        <strong>Body: </strong>
        <%= critic.body %>
      </p>
    </li>
    </ul>
  <% end %>


